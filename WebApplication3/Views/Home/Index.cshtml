@section scripts {
    @Scripts.Render("~/bundles/app")
}




<div class="" style="padding-top:5px;padding-bottom:15px;">
    
        <span style="font-size:18px;font-weight: bold;">Employee Details</span>

        <button type="button" <a href="@Url.Action("AddPage","Product")">Add Product</a> style="float:right;" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i>Add Employee</button>
  
</div>
<div class="">
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Email</th>
                <th>Image</th>
                <th>IsActive</th>
                <th>Mobile</th>
                <th>College</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: employees">

            <tr>
                <td data-bind="text: Email"></td>
                <td data-bind="click: $parent.getEmployeeDetail" data-toggle="modal" data-target="#userModal">
                    <a href="" data-bind="text: FirstName"></a>
                </td>
                <td>
                    <i data-toggle="modal" data-target="#myModal" data-bind="visible: IsActive" style="color:green;" class="fa fa-check-circle" aria-hidden="true"></i>
                    <i data-toggle="modal" data-target="#myModal" style="color:red;" data-bind="visible: !IsActive" class="fa fa-times-circle" aria-hidden="true"></i>

                </td>
                <td data-bind="text: MobileNumber"></td>
                <td data-bind="text: CollegeName"></td>
                <td>
                    <button type="button" class="btn btn-warning btn-sm" data-bind="click: $parent.getEmployeeDetail" href="@Url.Action("EditPage", "Product")">
                        <i class="fa fa-pencil-square-o"  aria-hidden="true"></i>
                        Edit
                    </button>
                </td>
            </tr>

        </tbody>
    </table>
    <div class="alert alert-danger" data-bind="visible: error">
        <p data-bind="text: error"></p>
    </div>

</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div style="background-color:cyan;" class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Toggle Employee Status</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p style="color:red;">Are you sure you want to disable this user?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div style="background-color:cyan;" class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Use Details Popup</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <!-- ko if:detail() -->

            <div class="modal-body">
                <p>
                    Name :
                    <span data-bind="text: detail().FirstName"></span>
                </p>
                <p>
                    Email :
                    <span data-bind="text: detail().Email"></span>
                </p>
            </div>
            <!-- /ko -->

        </div>
    </div>

</div>
<div class="container-fluid" style="padding-top:5px;padding-bottom:15px;">
    <form method="get" action="employeePage.html">
        <span style="font-size:18px;font-weight: bold;">Add Employee</span>

    </form>
</div>
<div class="container-fluid">
    <form data-bind="submit: addEmployee">
        <div class="row">

            <div class="col-md-6">
                <div class="form-group" data-bind="with: newEmployee">
                    <label for="inputFirstName">First Name *</label>
                    <input type="text" class="form-control" data-bind="value:FirstName" id="inputFirstName" aria-describedby="emailHelp" placeholder="Enter First Name">
                </div>
                <div class="form-group" data-bind="with: newEmployee">
                    <label for="inputLastName">Last Name *</label>
                    <input type="text" class="form-control" data-bind="value:LastName" id="inputLastName" aria-describedby="emailHelp" placeholder="Enter Last Name">
                </div>
                <div class="form-group" data-bind="with: newEmployee">
                    <label for="inputMobileNumber">Mobile Number*</label>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">
                            <i class="fa fa-mobile" aria-hidden="true"></i>
                        </span>
                        <input type="text" data-bind="value:MobileNumber" class="form-control" id="inputMobileNumber" aria-describedby="emailHelp" placeholder="Enter Mobile Number">
                    </div>
                </div>

                <div class="form-group" data-bind="with: newEmployee">
                    <label for="inputDateOfBirth">Date of Birth*</label>

                    <div class="input-group date">
                        <span class="input-group-addon" id="basic-addon1">
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                        </span>

                        <input type="text" data-bind="value:DateOfBirth" class="form-control" id="inputDateOfBirth" placeholder="MM/DD/YYYY">
                    </div>
                </div>
                <div class="form-group" data-bind="with: newEmployee">
                    <label for="inputEmail">Email *</label>

                    <input type="email" class="form-control" data-bind="value:Email" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter Last Name">
                </div>
                  
               <fieldset class="form-group row" data-bind="with: newEmployee">
                    <legend class="col-form-legend col-sm-2">Gender *</legend>
                    <div class="col-sm-10">
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input class="form-check-input" data-bind="checked:Gender" type="radio" name="Female" id="gridRadios1" value="Female">
                                Female
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <label class="form-check-label">
                                <input class="form-check-input" type="radio" data-bind="checked:Gender" name="Male" id="gridRadios2" value="Male">
                                Male
                            </label>
                        </div>
                    </div>

                </fieldset> 

                <div class="form-group">
                    <label for="inputCollege">College *</label>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1"><i class="fa fa-institution" aria-hidden="true"></i></span>
                        <select class="form-control"  data-bind="options:colleges, optionsText: 'Name', value: newEmployee.CollegeId"></select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputQualification">Qualification *</label>
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon1">
                            <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                        </span>
                        <select class="form-control"  data-bind="options:qualifications, optionsText: 'Name', value:newEmployee.QualificationId"></select>
                    </div>
                </div>
                <div class="form-group" data-bind="with: newEmployee">
                    <label for="inputYearOfGraduating">Year of Graduating</label>
                    <select class="form-control" data-bind="value:YearOfGraduating" >
                        <option>2013</option>
                        <option>2014</option>
                        <option>2015</option>
                        <option>2016</option>
                        <option>2017</option>
                    </select>
                </div>
            </div>

            <div class="col-md-6">


                <div class="form-group">
                    <label for="inputBranch">Branch *</label>
                    <select class="form-control"  data-bind="options:branches, optionsText: 'Name', value: newEmployee.BranchId">
                    </select>
                </div>
                <div class="form-group" data-bind="with: newEmployee">
                    <label for="inputDateOfJoining">Date of Joining *</label>

                    <div class="input-group date">
                        <span class="input-group-addon" id="basic-addon2">
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                        </span>

                        <input type="text" data-bind="value: DateOfJoining" class="form-control" id="inputDateOfJoining" placeholder="MM/DD/YYYY">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputStream">Stream *</label>
                    <select class="form-control"  data-bind="options:streams, optionsText: 'Name', value: newEmployee.StreamId">
                    </select>
                </div>
                <div class="form-group" data-bind="with: newEmployee">
                    <label for="inputLanguage">Language *</label>
                    <select class="form-control" data-bind="value:Language" >
                        <option>1</option>
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                    </select>
                </div>

             <!--  <div class="form-group">
                    <label>Photograph* </label>
                    <div>
                        <img id='img-upload' />
                    </div>

                    <div class="input-group">
                        <span class="input-group-btn">
                            <span class="btn btn-info btn-file">
                                <i class="fa fa-folder-open" aria-hidden="true"></i>
                                Browse… <input type="file" id="imgInp">
                            </span>
                        </span>
                    </div>
                </div> -->
                <div class="form-group" data-bind="with: newEmployee">

                    <input class="form-check-input" data-bind="checked:IsActive" type="radio" name="true" id="gridRadios3" value="true" checked>
                  </div>
                        <button type="submit" class="btn btn-success"><i class="fa fa-save" aria-hidden="true"></i> Save</button>

                    </div>

        </div>
    </form>
</div>

